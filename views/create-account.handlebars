<script src="checkNewAccount.js"></script>

<h1>Create an account:</h1>

    <form action="./create-account" method="POST">
        <div class="field">
            <label for="txtfName">First name:</label>
            <input type="text" name="fname" id="txtfName" required>
        </div>

        <div class="field">
            <label for="txtlName">Last name:</label>
            <input type="text" name="lname" id="txtlName" required>
        </div>

        <div class="field">
            <label for="dob">Date of birth:</label>
            <input type="date" name="dob" id="dob" required>
        </div>
        
        <div class="field" id="usernameDiv">
            <label for="txtUsername">Username:</label>
            <input type="text" name="username" id="txtUsername" required>
            <span id="usernameMessage"></span>
        </div>

        <div class="field">
            <label for="txtPassword">Password:</label>
            <input type="password" name="password" id="txtPassword" required>
        </div>

        <div class="field">
            <label for="confirmPassword">Confirm password:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" required>
            <span id="confirmPasswordMessage"></span>
        </div>

        <div class="field">
            <label for="txtdesc">Description:</label>
            <textarea id="txtdesc" name="description" rows="4" cols="50" maxlength="300" placeholder="Describe yourself in 300 characters"></textarea>
        </div>

        Pick your avatar!

        <div class="field">
            <input type="radio" id="bear" name="avatar" value="bear-icon.png">
            <img src="avatars\bear-icon.png">
            <input type="radio" id="dino" name="avatar" value="dino-icon.png">
            <img src="avatars\dino-icon.png">
            <input type="radio" id="fox" name="avatar" value="fox-icon.png">
            <img src="avatars\fox-icon.png">
            <input type="radio" id="sloth" name="avatar" value="sloth-icon.png">
            <img src="avatars\sloth-icon.png">
            <input type="radio" id="alpaca" name="avatar" value="alpaca-icon.png">
            <img src="avatars\alpaca-icon.png">
            <input type="radio" id="dragon" name="avatar" value="dragon-icon.png">
            <img src="avatars\dragon-icon.png">
            <input type="radio" id="octopus" name="avatar" value="octopus-icon.png">
            <img src="avatars\octopus-icon.png">
            <input type="radio" id="snake" name="avatar" value="nake-icon.png">
            <img src="avatars\snake-icon.png">
            <input type="radio" id="parrot" name="avatar" value="parrot-icon.png">
            <img src="avatars\parrot-icon.png">
            <input type="radio" id="elephant" name="avatar" value="elephant-icon.png">
            <img src="avatars\elephant-icon.png">
        </div>

        

        <div class="field justify-sb align-center">
            {{!-- <button type="submit" id="submitButton">Create account</button> --}}
            <input type="submit" id="submitButton">
        </div>
    </form>