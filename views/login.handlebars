{{#if message}}
<p>{{message}}</p>
{{/if}}

<h1 class="header">Login</h1>
<br>


<div id="loginFormDiv">
<form action="./login" method="POST" id="loginForm">

    <div id="loginInputsDiv">
        <div>
            <label for="usernameID" id="usernameLabel">Username:</label>
            <input type="text" id="usernameID" class="loginInputs" name="username" size="30">
        </div>
        <br>

        <div>
            <label for="passwordID" id="passwordLabel">Password:</label>
            <input type="password" id="passwordID" class="loginInputs" name="password" size="30">
        </div>
    </div>
    <br>

    <div id="loginButtonsDiv">
        <div>
            <button type="submit" class="loginButtons" id="loginButton">Log in</button>
        </div>

        <div>
            <button type="button" onclick="location.href='./create-account'" class="loginButtons">Create account</button>
        </div>
    </div>

</form>
</div>
