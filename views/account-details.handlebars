    <table id="accountDetailsTable">
        <tr>
            <th>First name: </th>
            <td>{{user.fname}}</td>
        </tr>
        <tr>
            <th>Last name: </th>
            <td>{{user.lname}}</td>
        </tr>
        <tr>
            <th>Date of birth: </th>
            <td>{{user.dob}}</td>
        </tr>
        <tr>
            <th>Username: </th>
            <td>{{user.username}}</td>
        </tr>
        <tr>
            <th>Description: </th>
            <td>{{user.description}}</td>
        </tr>
        <tr>
            <th>Avatar: </th>
            <td><img src="./avatars/{{user.imageSource}}"></td>
        </tr>
    </table>

    <form action="./edit-account" method="GET">
        <div class="edit">
            <input type="submit" value="Edit account">
        </div>
    </form>

    <div class="delete">
        <form action="./deleteuser" method="POST">
            <input type="submit" name="deleteButton"
                onclick="return confirm('Are you sure you want to delete your account?')" value="Delete acccount">
        </form>
    </div>
</div>

<style>

    table, th, tr, td {
        
        text-align: left;
        font-size: large;
        border-radius: 10px;
        padding: 10px;
    }

    table {
        background-color: rgb(211, 211, 211);
        
    }

    th, td {
        background-color: white;
        padding: 10px;
    }

</style>