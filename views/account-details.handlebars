{{#if message}}
<p>{{message}}</p>
{{/if}}

<h1>Account Details</h1>

    <div class="currentDetails">

        <p>First name: {{user.fname}}</p>

        <p>Last name: {{user.lname}}</p>

        <p>Date of birth: {{user.dob}}</p>

        <p>Username: {{user.username}}</p>

        <p>Description: {{user.description}}</p>

        <p>Avatar: <img src="./avatars/{{user.imageSource}}"></p>

        <table id="accountDetailsTable">
            <tr><th>First name: </th><td>{{user.fname}}</td></tr>
            <tr><th>Last name: </th><td>{{user.lname}}</td></tr>
            <tr><th>Date of birth: </th><td>{{user.dob}}</td></tr>
            <tr><th>Username: </th><td>{{user.username}}</td></tr>
            <tr><th>Description: </th><td>{{user.description}}</td></tr>
            <tr><th>Avatar: </th><td><img src="./avatars/{{user.imageSource}}"></td></tr>
        </table>

        <form action="./edit-account" method="GET">
            <div class="edit">
                <input type="submit" value="Edit account">
            </div>
        </form>

        <div class="delete">
            <form action="./deleteuser" method="POST">
                <input type="submit" name="deleteButton" onclick="return confirm('Are you sure you want to delete your account?')" value="Delete acccount">
            </form>
        </div>
    </div>