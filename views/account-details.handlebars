{{#if message}}
<p>{{message}}</p>
{{/if}}

<h1>Account Details</h1>

<div class="currentDetails">
    {{!--
    <p>First name: {{user.fname}}</p>

    <p>Last name: {{user.lname}}</p>

    <p>Date of birth: {{user.dob}}</p>

    <p>Username: {{user.username}}</p>

    <p>Description: {{user.description}}</p>

    <p>Avatar: <img src="./avatars/{{user.imageSource}}"></p> --}}

    <table id="accountDetailsTable">
        <tr>
            <th>First name: </th>
            <td>{{user.fname}}</td>
        </tr>
        <tr>
            <th>Last name: </th>
            <td>{{user.lname}}</td>
        </tr>
        <tr>
            <th>Date of birth: </th>
            <td>{{user.dob}}</td>
        </tr>
        <tr>
            <th>Username: </th>
            <td>{{user.username}}</td>
        </tr>
        <tr>
            <th>Description: </th>
            <td>{{user.description}}</td>
        </tr>
        <tr>
            <th>Avatar: </th>
            <td><img src="./avatars/{{user.imageSource}}"></td>
        </tr>
    </table>

    <div id="buttons">

        <div id="edit">
            <form action="./edit-account" method="GET">
                <input type="submit" value="Edit account">
            </form>
        </div>

        <div id="delete">
            <form action="./deleteuser" method="POST">
                <input type="submit" name="deleteButton"
                    onclick="return confirm('Are you sure you want to delete your account?')" value="Delete account">
            </form>
        </div>

    </div>

</div>

<style>
    table, th, tr, td {

        text-align: left;
        font-size: large;
        border-radius: 20px;
        padding: 10px;
        table-layout: fixed;
        width: 100%;
        border-spacing: 20px;
    }

    th, tr {
        background-color: rgb(221, 221, 221);
        padding: 10px;
    }

    #buttons {
        display: flex;
        justify-content: center;
    }

    #delete, #edit {
        padding: 20px;
    }

</style>