<script type="text/javascript" src="sortForMyArticle.js"></script>

<div id="myArticlesContainer">

{{#if message}}
<p>{{message}}</p>
{{/if}}

    <h1>My articles</h1>

    {{#if articles}}

        <p class="sort">Sort by: </p>
            <button type="button" class="sort" id="postTime" onclick="getSort(this.id)">Oldest</button>
            <button type="button" class="sort" id="postTime DESC" onclick="getSort(this.id)">Newest</button>
            <button type="button" class="sort" id="title" onclick="getSort(this.id)">Title</button>

        <div class="articleContainer">
            <table>
            <tr>
                <td>Title</td>
                <td>Author</td>
                <td>Posted on</td>
            </tr>
            {{#each articles}}
                <tr>
                    <td><a href="./read-article?articleID={{this.id}}">{{this.title}}</a></td>
                    <td>{{this.username}}</td>
                    <td>{{this.postTime}}</td>
                    {{!-- <td><button type="button" class="editArticleButton" onclick="location.href='./edit-article?articleID={{this.id}}'">Edit article</button></td> --}}
                </tr>
            {{/each}}
            </table>
        
        {{else}}
        <h2>You haven't written any articles!</h2>
        {{/if}}
        </div>


</div>


