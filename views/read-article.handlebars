<div id="readArticleContainer">

    <div id="articleView">

        <h1>{{article.title}}</h1>
        <p><i>Submitted by: {{article.username}}</i></p>
        <img src="./imageUploads/{{article.imageSource}}">
        {{{article.content}}}
        
    </div>
    <br>

    <form action="./createComment" method="POST">
        {{! if logged in}}
            <label for="commentInput">Comments:</label>
            <br>
            <textarea id="commentInput" name="commentInput" rows="4" cols="50" maxlength="300">Add a comment!</textarea>
            <input type="submit" value="Submit your comment!">
    </form>
    

    <div id="commentBox">

        <p>Comments will be displayed here!</p>

        {{!#if comments}
        {#each comments}
        <div id="commentDisplay">
            {{this.content}
        </div>
            {{#if comments have child}
            <div class="reply">
                {{reply}
            </div>

            {{#else}
            There are no comments yet!
            {{/if}}
    </div>

</div>